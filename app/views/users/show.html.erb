
<%= render 'users/info', user: @user %>

<%= render 'books/new', book: @book %>

<h2>Books</h2>
 <table>
  <thead>
   <tr>
    <th></th>
    <th>Title</th>
    <th>Opinion</th>
   </tr>
  </thead>
  <tbody>
  <% @books.each do |book| %>
    <tr>
     <td>
      <%= link_to  user_path(@user.id) do %>
       <%= attachment_image_tag @user, :profile_image, class: "pull-left profile-thumb", fallback: "no_image.jpg", size: "60x60" %>
      <% end %>
     </td>
     <td><%= link_to book.title, book_path(book) %></td>
     <td><%= book.body %></td>
    </tr>
  <% end %>
  </tbody>
</table>