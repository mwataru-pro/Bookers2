<!DOCTYPE html>
<html>
  <head>
    <title>Bookers</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header class="navbar navbar-fixed-top navbar-inverse">
      <div class="container">
        <nav class='nav navbar-nav navbar-left'>
          <span class="title">Bookers</span>
        </nav>
        <div id="slidemenu">
          <ul class="nav navbar-nav navbar-right">
            <% if user_signed_in? %>
            <li class="">Home</li>
            <li class="">Users</li>
            <li class=""><%= link_to ' Books', books_path,class: "glyphicon glyphicon-book"  %></li>
            <li class=""><%= link_to " logout", destroy_user_session_path, method: :delete,class: "glyphicon glyphicon-log-out"  %></li>

            <% else %>

            <li class="">Home</li>
            <li class="">About</li>
            <li class=""><%= link_to " sign up", new_user_registration_path,class: "glyphicon glyphicon-edit"  %></li>
            <li class=""><%= link_to " log in", new_user_session_path,class: "glyphicon glyphicon-log-in"  %></li>
            <% end %>
          </ul>
    </header>
    </div>
    <%= yield %>
    </div>
  </body>
</html>
