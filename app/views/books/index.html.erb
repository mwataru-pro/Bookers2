<p id="neotice"><%= notice %></p>

<div class="col-xs-3">
 <h2>New book</h2>

<%= form_for(@book) do |f| %>
 <div class="field row">
  <label class="control-label">Title</label><br>
  <%= f.text_field :title %>
  <br>
 </div>

 <div class="field row">
  <label class="control-label">Opinion</label><br>
  <%= f.text_area :body %>
  <br>
 </div>

 <div class="field row">
  <%= f.submit "Create Book", class: "btn btn-primary btn-block " %>
 </div>

<% end %>
</div>

<div class="col-xs-9">
 <h2>Books</h2>
 <table class="table table-striped">
    <thead>
        <tr>
         <th></th>
         <th>Title</th>
         <th>Opinion</th>
         <th colspan="3"></th>
        </tr>
    </thead>
	<tbody>
	 <% @books.each do |book| %>
	    <tr>
	     <td><a><%= attachment_image_tag @user, :profile_image, size:'60x60', format:'jpeg', class: "pull-left profile-img", fallback: "no_image.jpg" %></a></td>
		 <td><%= link_to book.title,book_path(book.id) %></td>
		 <td><%= book.body %></td>
		</tr>
	<% end %>
	</tbody>
 </table>
</div>