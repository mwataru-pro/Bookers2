<h1>Books</h1>
<table>
	<thead>
		<tr>
			<th></th>
			<th>Title</th>
			<th>Opinion</th>
		</tr>
	</thead>
	<tbody>
		<% @books.each do |book| %>
		<tr>
			<td><%= book.title %></td>
			<td><%= book.body %></td>
		</tr>
		<% end %>
	</tbody>
</table>

<h1>New book</h1>

<%= form_for(@book) do |f| %>

  <label class="control-label">Title</label><br>
  <%= f.text_field :title %>
  <br>
  <label class="control-label">Opinion</label><br>
  <%= f.text_area :body %>
  <br>
  <%= f.submit "Create Book", class: "btn btn-primary btn-block " %>

<% end %>